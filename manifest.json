{
  "manifest_version": 2,

  "name": "Url alias",
  "description": "This extension manages alias for urls",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "https://*/",
    "tabs"
  ],
  "background": {
      "persistent": false,
      "scripts": [ "background.js" ]
   }
}