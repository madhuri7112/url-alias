{
  "manifest_version": 2,

  "name": "Url alias",
  "description": "This extension manages alias for chrome urls",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "permissions": [
    "activeTab",
    "https://*/",
    "tabs",
    "storage"
  ],
  "options_page": "appPage.html",
  "background": {
      "persistent": false,
      "scripts": [ "background.js" ]
   }
}